{
  "name": "Busy Mouse,
  "version": "0.0.0.1",
  "manifest_version": 3,
  "description": "A Microsoft Edge browser(Chromium) extension to simulate mouse inputs.",
  "icons": {
    "16": "icons/busymouse16x16.png",
    "32": "icons/busymouse32x32.png",
    "48": "icons/busymouse48x48.png",
    "128": "icons/busymouse128x128.png"
  },
  "action": {
    "default_popup": "popup/popup.html"
  },
  "permissions": [
    "activeTab",
    "scripting"
],
}
